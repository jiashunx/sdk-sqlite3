        </sql>
    </dml>
    <!-- 数据定义SQL -->
    <ddl>
        <table name="aaa" desc="全量字段映射样例">
            <column name="field_id" type="varchar" primary="true" length="32" />
            <column name="field_varchar" type="varchar" length="32" not-null="true" />
